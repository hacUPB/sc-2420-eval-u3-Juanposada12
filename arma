#ifndef ARMA_H
#define ARMA_H

#include <iostream>
#include <string>

class Arma {
private:
    std::string nombre;  // Nombre del arma
    int daño;            // Daño del arma
    float alcance;       // Alcance del arma

public:
    // Constructor
    Arma(std::string nombre, int daño, float alcance);

    // Destructor
    ~Arma();

    // Método para mostrar información del arma
    void mostrar_info() const;
};

#endif // ARMA_H
